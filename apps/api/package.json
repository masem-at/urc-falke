    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.45.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.0.0",
    "jose": "^6.1.3",
    "papaparse": "^5.5.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.10",
    "@types/papaparse": "^5.5.2",
    "drizzle-kit": "^0.30.1",
